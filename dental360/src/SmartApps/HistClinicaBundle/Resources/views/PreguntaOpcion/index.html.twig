{% block body -%}
    <div class="row">
        <div class="col-md-7">
            <h2>Opciones de pregunta</h2>
        </div>
        <div class="col-md-5" style="padding-top: 20px; text-align: right;">
            <ul class="list-inline">
                <li >
                    <a href="{{ path('preguntaopcion_newopcion', { 'idpreg': idpreg }) }}" class="btn btn-default">
                        Registrar opcion
                    </a>
                </li>                
