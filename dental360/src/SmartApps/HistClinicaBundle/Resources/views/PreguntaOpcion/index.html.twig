                <td><a href="{{ path('preguntaopcion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.orden }}</td>
                <td>{{ entity.enunciado }}</td>
                <td>{{ entity.valorTexto }}</td>
                <td>{{ entity.valorNumero }}</td>
                <td>{{ entity.opciones }}</td>
                <td>
<ul class="list-inline">                    
                    <li>
                        <a href="{{ path('preguntaopcion_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('preguntaopcion_delete', { 'id': entity.id }) }}" onclick="javascript: return confirm('Â¿Esta seguro de eliminar la opcion?');" >Borrar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
        <a href="{{ path('pregunta') }}" class="btn btn-default">
