{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-7">
            <h2>Costos de Procedimientos</h2>
        </div>
        <div class="col-md-5" style="padding-top: 20px; text-align: right;">
            <ul class="list-inline">
                <li >
                    <a href="{{ path('costoProcedimiento_new') }}" class="btn btn-default">
                        Registrar Costo
                    </a>
                </li>                
            </ul>
        </div>
    </div>

    <table class="records_list table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Convenio</th>
                <th>Procedimiento</th>
                <th>Valor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{entity.convenio.nombreConvenio}}</td>
                <td>{{ entity.procedimiento.descripcion }}</td>
                <td>{{ entity.valor }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('costoProcedimiento_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('costoProcedimiento_delete', { 'id': entity.id }) }}" onclick="javascript: return confirm('Â¿Esta seguro de eliminar el convenio?');" >Borrar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {{ simple_paginator_render('costoProcedimiento',null,{
                    'container_class':'pagination',
                    'firstPageText':'|<',
                    'firstEnabledClass':'',
                    'firstDisabledClass':'disabled',
                    'previousPageText': '<<',
                    'previousEnabledClass':'',
                    'previousDisabledClass':'disabled',
                    'currentClass': 'active',
                    'nextPageText': '>>',
                    'nextEnabledClass':'',
                    'nextDisabledClass':'disabled', 
                    'lastPageText':'>|',
                    'lastEnabledClass': '',
                    'lastDisabledClass': 'disabled'
                    })}}
    {% endblock %}
