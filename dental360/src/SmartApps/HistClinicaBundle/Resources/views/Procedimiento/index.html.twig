{% extends '::base.html.twig' %}

{% block body -%}
    
    <div class="row">
        <div class="col-md-7">
            <h2>Procedimientos</h2>
        </div>
        <div class="col-md-5" style="padding-top: 20px; text-align: right;">
            <ul class="list-inline">
                <li >                    
                        <a href="{{ path('procedimiento_new') }}" class="btn btn-default">
                Registrar procedimiento
            </a>
                </li>                
            </ul>
        </div>
    </div>

    <table class="records_list table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Descripci&oacute;n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('procedimiento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('procedimiento_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('procedimiento_delete', { 'id': entity.id }) }}" onclick="javascript: return confirm('Â¿Esta seguro de eliminar el procedimiento?');" >Borrar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {{ simple_paginator_render('procedimiento')}}

    {% endblock %}
