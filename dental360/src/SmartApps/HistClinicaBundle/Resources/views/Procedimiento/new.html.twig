{% extends '::base.html.twig' %}

{% block body -%}
{% form_theme form 'HistClinicaBundle:Form:form_template.html.twig' %}
    <h2>Registrar procedimiento</h2>
    
        {{ form_start(form) }}        
    <div class="row formulario-row">
        <div class="col-md-2">{{form_label(form.descripcion, 'Descripci√≥n') }}</div>
        <div class="col-md-4">{{form_widget(form.descripcion) }}        </div>   
        <div class= "col-md-4">{{form_errors(form.descripcion)}}</div>
    </div>
    <div class="row formulario-row">
        <div class="col-md-12">        
        <ul class="list-inline">
                <li >
                    {{form_row(form.submit, {'label': 'Guardar', 'attr' : { 'class' :'btn btn-default' } }) }}                
                </li>                
                <li >
                    <a href="{{ path('procedimiento') }}" class="btn btn-default">
                        Volver al listado
                    </a>
                </li>                
            </ul>        
        </div>
    </div>
    {{ form_end(form)}}
        
{% endblock %}
