{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-7">
            <h2>Preguntas</h2>
        </div>
        <div class="col-md-5" style="padding-top: 20px; text-align: right;">
            <ul class="list-inline">
                <li >
                    <a href="{{ path('pregunta_new') }}" class="btn btn-default">
                        Registrar pregunta
                    </a>
                </li>                
                <li >
                    <a href="{{ path('pregunta_createfromtemplate') }}" class="btn btn-default">
                        Crear desde template
                    </a>
                </li>                
            </ul>
                
                
                
        </div>
    </div>
        
    <table class="records_list table table-striped table-condensed table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo entrada</th>
                <th>Enunciado</th>
                <th>Obligatoria</th>
                <th>Orden</th>
                <th>Colspan</th>
                <th>Rowspan</th>
                <th>No columna</th>
                <th>Esta activa</th>
                <th>Opciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pregunta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ tipoentrada[entity.tipoEntrada] }}</td>
                
                <td>{{ entity.enunciado }}</td>
                <td>{{ sinoenum[entity.obligatoria] }}</td>
                
                <td>{{ entity.orden }}</td>
                <td>{{ entity.colspan }}</td>
                <td>{{ entity.rowspan }}</td>
                <td>{{ entity.noColumna }}</td>
                <td>{{ sinoenum[entity.estaActiva] }}</td>
                <td>{{ entity.opciones }}</td>
                <td>
                <ul class="list-inline">
                    
                    <li>
                        <a href="{{ path('pregunta_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    <li>
                        <a href="{{ path('pregunta_delete', { 'id': entity.id }) }}" onclick="javascript: return confirm('Â¿Esta seguro de eliminar la pregunta?');" >Borrar</a>
                    </li>
                    <li>
                        <a href="{{ path('preguntaopcion_listado', { 'id': entity.id }) }}">Opciones</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                
                {{ simple_paginator_render('pregunta')}}
    {% endblock %}
