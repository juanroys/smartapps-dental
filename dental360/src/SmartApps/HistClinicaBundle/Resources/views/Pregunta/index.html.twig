{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pregunta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Enunciado</th>
                <th>Obligatoria</th>
                <th>Orden</th>
                <th>Colspan</th>
                <th>Rowspan</th>
                <th>Nocolumna</th>
                <th>Estaactiva</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pregunta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.enunciado }}</td>
                <td>{{ entity.obligatoria }}</td>
                <td>{{ entity.orden }}</td>
                <td>{{ entity.colspan }}</td>
                <td>{{ entity.rowspan }}</td>
                <td>{{ entity.noColumna }}</td>
                <td>{{ entity.estaActiva }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pregunta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pregunta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pregunta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
