{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
<div class="alert-block alert alert-danger" style="padding-top: 6px; padding-bottom: 6px; padding-left: 15px; padding-right: 15px;" >
            {% for error in errors %}
                {{ error.message }}
            {% endfor %}
</div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form_widget_simple %}
    {% set type = type|default('text') %}
<input class="form-control"type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock form_widget_simple %}