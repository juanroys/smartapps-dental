{% extends '::base.html.twig' %}

{% block body -%}
     <div class="row">
        <div class="col-md-7">
            <h2>Templates de pregunta</h2>
        </div>
        <div class="col-md-5" style="padding-top: 20px; text-align: right;">
            <ul class="list-inline">
                <li >
