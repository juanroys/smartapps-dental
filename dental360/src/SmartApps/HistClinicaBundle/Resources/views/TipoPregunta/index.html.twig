                <th>Tipo entrada</th>
                <th>Descripci&oacute;n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>                
                <td>{{ tipoentrada[entity.tipoEntrada] }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul class="list-inline">                    
                    <li>
                        <a href="{{ path('tipopregunta_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>   
                    <li>
                        <a href="{{ path('tipopregunta_delete', { 'id': entity.id }) }}" onclick="javascript: return confirm('Â¿Esta seguro de eliminar el template?');" >Borrar</a>
                    </li>
                    <li>
                        <a href="{{ path('opcionrespuesta_listado', { 'id': entity.id }) }}">Opciones</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
