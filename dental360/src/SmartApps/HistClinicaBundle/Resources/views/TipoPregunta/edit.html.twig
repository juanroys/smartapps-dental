{% extends '::base.html.twig' %}

{% block body -%}
       
     <h2>Editar Template    </h2>    
    {{ form_start(edit_form) }}        
     <div class="row formulario-row">
        <div class="col-md-2">{{form_label(edit_form.descripcion) }}</div>
        <div class="col-md-4">{{form_widget(edit_form.descripcion) }}        </div>    
        <div class="col-md-2">{{form_label(edit_form.tipoEntrada) }}</div>
        <div class="col-md-4">{{form_widget(edit_form.tipoEntrada) }}        </div>    
    </div>    
    <div class="row formulario-row">
        <div class="col-md-12">        
        <ul class="list-inline">
                <li >
                    {{form_row(edit_form.submit, {'label': 'Guardar', 'attr' : { 'class' :'btn btn-default' } }) }}                
                </li>                
                <li >
                    <a href="{{ path('tipopregunta') }}" class="btn btn-default">
                        Volver al listado
                    </a>
                </li>                
            </ul>        
        </div>
    </div>
    {{ form_end(edit_form)}}
{% endblock %}
