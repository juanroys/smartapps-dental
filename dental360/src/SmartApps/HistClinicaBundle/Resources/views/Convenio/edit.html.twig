{% extends '::base.html.twig' %}

{% block body -%}
{% form_theme edit_form 'HistClinicaBundle:Form:form_template.html.twig' %}
    <h2>Editar Convenio</h2>
    {{ form_start(edit_form) }}        
    <div class="row formulario-row">
        <div class="col-md-2">{{form_label(edit_form.nombreConvenio) }}</div>
        <div class="col-md-4">{{form_widget(edit_form.nombreConvenio) }}</div> 
        <div class= "col-md-4">{{form_errors(edit_form.nombreConvenio)}}</div>
    </div>
    <div class="row formulario-row">
        <div class="col-md-12">        
        <ul class="list-inline">
                <li >
                    {{form_row(edit_form.submit, {'label': 'Guardar', 'attr' : { 'class' :'btn btn-default' } }) }}                
                </li>                
                <li >
                    <a href="{{ path('convenio') }}" class="btn btn-default">
                        Volver al listado
                    </a>
                </li>                
            </ul>        
        </div>
    </div>
    {{ form_end(edit_form)}}
    
    
{% endblock %}
