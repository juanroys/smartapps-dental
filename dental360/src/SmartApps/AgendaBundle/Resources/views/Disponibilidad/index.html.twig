{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Disponibilidad list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Diassemena</th>
                <th>Fechadesde</th>
                <th>Fechahasta</th>
                <th>Horainicio</th>
                <th>Horafin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('disponibilidad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.diasSemena }}</td>
                <td>{% if entity.fechaDesde %}{{ entity.fechaDesde|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaHasta %}{{ entity.fechaHasta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.horaInicio %}{{ entity.horaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.horaFin %}{{ entity.horaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('disponibilidad_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('disponibilidad_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('disponibilidad_new') }}">
