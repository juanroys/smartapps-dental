{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
<div class="alert-block alert alert-danger" style="padding-top: 6px; padding-bottom: 6px; padding-left: 15px; padding-right: 15px;" >
            {% for error in errors %}
                {{ error.message }}
            {% endfor %}
</div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}